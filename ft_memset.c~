#include <stdlib.h>

void	*memset(void *s, int c, size_t n)
{
	int i;

	i = 0;
	s = (int *)malloc(sizeof(int) * n);
	while (i < n)
	{
		s[i] = c;
		i++;
	}
	return (s);
}
